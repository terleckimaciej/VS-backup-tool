// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+enter",
        "command": "jupyter.runcurrentcell",
        "when": "notebookCellEditorFocused"
    },
    {
        "key": "ctrl+enter",
        "command": "notebook.cell.execute",
        "when": "notebookCellListFocused && notebookMissingKernelExtension && !notebookCellExecuting && notebookCellType == 'code' || notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelCount > 0 || notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelSourceCount > 0"
    },
    {
        "key": "ctrl+shift+i",
        "command": "inlineChat.start",
        "when": "editorFocus && inlineChatHasEditsAgent && inlineChatPossible && !editorReadonly && !editorSimpleInput || editorFocus && inlineChatHasNotebookAgent && inlineChatPossible && !editorReadonly && !editorSimpleInput && activeEditor == 'workbench.editor.notebook' || editorFocus && inlineChatHasNotebookInline && inlineChatPossible && !editorReadonly && !editorSimpleInput && activeEditor == 'workbench.editor.notebook'"
    },
    {
    "key": "ctrl+i",
    "command": "workbench.action.chat.openagent",
    "when": "config.chat.agent.enabled && !chatSetupDisabled && !chatSetupHidden && !inChatInput"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "chatViewletVisible && inChatInput"
    },
    {
        "key": "ctrl+shift+i",
        "command": "-workbench.action.chat.openagent",
        "when": "config.chat.agent.enabled && !chatSetupDisabled && !chatSetupHidden"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        "key": "alt+s",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active || terminalFocus"
    },
    {
        "key": "alt+e",
        "command": "workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled || terminalFocus"
    },
    {
        "key": "alt+x",
        "command": "workbench.view.extensions",
        "when": "terminalFocus || !terminalFocus"
    },
    {
        "key": "alt+f",
        "command": "list.find",
        "when": "list.focus"
    },
    {
        "key": "ctrl+u",
        "command": "workbench.action.chat.startVoiceChat"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    // pull with alt+l 
    {
        "key": "alt+l",
        "command": "git.pullRef",
        "when": "scmProvider == 'git'"
    },
    // commit and push with ctrl+alt+p when the scm input is focused
    {
        "key": "ctrl+alt+p",
        "command": "git.commitAndPush",
        "when": "activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "alt+b",
        "command": "git.checkout",
        "when": "!operationInProgress"
    },
    {
        "key": "shift+alt+l",
        "command": "git.fetchAll",
        "when": "scmProvider == 'git'"
    },
    {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
    }, //tutaj mozna jeszcze dodac inne focusy - jako opcja po prostu wychodzenia z nich 
]

